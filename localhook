#!/usr/bin/env php
<?php

// set to run indefinitely if needed
set_time_limit(0);

/* Optional. Itâ€™s better to do it in the php.ini file */
date_default_timezone_set('Europe/Paris');

// installed via composer?
if (file_exists($a = __DIR__ . '/../../autoload.php')) {
    require_once $a;
} else {
    require_once __DIR__ . '/vendor/autoload.php';
}

// import the Symfony Console Application
use Kasifi\Localhook\Command\ConfigureCommand;
use Kasifi\Localhook\Command\DeleteConfigurationCommand;
use Kasifi\Localhook\Command\RunCommand;
use Symfony\Component\Console\Application;

$app = new Application();
$app->add(new RunCommand());
$app->add(new DeleteConfigurationCommand());
$app->run();
?>
